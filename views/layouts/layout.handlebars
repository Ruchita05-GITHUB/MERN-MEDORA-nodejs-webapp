<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>MEDORA Patients</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">

    <!-- CSS Dependencies -->
    <link href="/css/bootstrap.css" rel="stylesheet">
    <link href="/css/metisMenu.min.css" rel="stylesheet">
    <link href="/css/timeline.css" rel="stylesheet">
    <link href="/css/startmin.css" rel="stylesheet">
    <link href="/css/morris.css" rel="stylesheet">
    <link href="/css/font-awesome.min.css" rel="stylesheet">

    <!-- JS Dependencies -->
    <script src="/js/jquery.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/metisMenu.min.js"></script>
    <script src="/js/startmin.js"></script>

    <style>
        .navbar-lavender {
            background: linear-gradient(90deg, lavender, lavenderblush);
            border-color: #ddd;
        }

        .medora-logo-text {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            font-weight: 900;
            font-size: 38px;
            text-transform: uppercase;
            letter-spacing: 3px;
            margin-top: 5px;
        }

        .medora-logo-text span {
    color: #4169E1; /* Royal Blue */
    text-shadow:
        -1px -1px 0 white,
         1px -1px 0 white,
        -1px  1px 0 white,
         1px  1px 0 white; /* White border */
}


        .sidebar {
            width: 220px;
            background-color: #f8f8f8;
        }

        #page-wrapper {
            margin-left: 220px;
            padding: 20px;
        }

        .navbar-header {
            display: flex;
            align-items: center;
        }

        .navbar-brand {
            display: flex;
            align-items: center;
        }

        .navbar-fixed-top {
            height: 60px;
        }
    </style>
</head>
<body>
    <div id="wrapper">
        <!-- Navigation -->
        <nav class="navbar navbar-fixed-top navbar-lavender" role="navigation" style="margin-bottom: 0;">
            <div class="navbar-header">
                <a class="navbar-brand" href="/app">
                    <div class="medora-logo-text">
                        <span>MEDORA</span>
                    </div>
                </a>
            </div>

            <!-- Top Right Menu -->
            <ul class="nav navbar-right navbar-top-links">
                <li>
                    <a href="/" style="margin-top: 10px;" class="btn btn-danger">Logout</a>
                </li>
            </ul>

            <!-- Sidebar -->
            <div class="navbar-default sidebar" role="navigation" style="margin-top: 60px;">
                <div class="sidebar-nav navbar-collapse">
                    <ul class="nav" id="side-menu">
                        <li>
                            <a href="/app"><i class="fa fa-bar-chart fa-fw"></i> Dashboard</a>
                        </li>
                        <li>
                            <a href="/app/addpatient"><i class="fa fa-ambulance fa-fw"></i> Add Patient</a>
                        </li>
                        <li>
                            <a href="/app/systemsettings"><i class="fa fa-cogs fa-fw"></i> System Settings</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <!-- Main Content -->
        <div id="page-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <h4 class="page-header">{{pageTitle}}</h4>
                    </div>
                </div>

                <!-- Flash messages -->
                {{#if success_msg}}
                    <div class="alert alert-success">{{success_msg}}</div>
                {{/if}}
                {{#if error_msg}}
                    <div class="alert alert-danger">{{error_msg}}</div>
                {{/if}}
                {{#if error}}
                    <div class="alert alert-danger">{{error}}</div>
                {{/if}}
                {{#if message}}
                    <div class="alert alert-danger">{{message}}</div>
                {{/if}}
                {{#each errors}}
                    <div class="alert alert-danger">{{this.msg}}</div>
                {{/each}}

                <!-- Page content -->
                {{{body}}}
            </div>
        </div>
    </div>
</body>
</html>
